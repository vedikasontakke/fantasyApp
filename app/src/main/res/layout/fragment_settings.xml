<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Setting"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="90dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbar"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"
                    android:gravity="center_vertical"
                    android:hint="Spinner limit :"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/spinnerLimit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:background="@color/transparent"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"
                    android:gravity="center_vertical"
                    android:hint="Spinner limit"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_scrach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"
                    android:gravity="center_vertical"
                    android:hint="Scratch limit :"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/scratchLimit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:background="@color/transparent"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"
                    android:gravity="center_vertical"
                    android:hint="Scratch limit"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_guess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"
                    android:gravity="center_vertical"
                    android:hint="Guess limit    :"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/guessLimit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:background="@color/transparent"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"
                    android:gravity="center_vertical"
                    android:hint="guess limit"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="0"

                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_refer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"
                    android:gravity="center_vertical"
                    android:hint="Refer Coins   :"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/referLimit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:background="@color/transparent"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"
                    android:gravity="center_vertical"
                    android:hint="refer limit"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </LinearLayout>

            <Button
                android:id="@+id/updateButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="39dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button_primary"
                android:fontFamily="@font/circularstd"
                android:gravity="center"
                android:padding="10dp"
                android:singleLine="true"
                android:text="UPDATE"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:theme="@style/progressColor"
            android:visibility="invisible" />


    </androidx.cardview.widget.CardView>


</RelativeLayout>