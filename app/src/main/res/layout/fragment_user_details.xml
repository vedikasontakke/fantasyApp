<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.userDetails.UserDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Profile Details"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:layout_above="@+id/buttonsLinearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:src="@drawable/splash"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profileImage"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="2dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:hint="Full Name"
                        android:textColor="@android:color/black"
                        android:inputType="textCapWords"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:text="Anagha Shaha"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="3dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:hint="Email"
                        android:inputType="textCapWords"
                        android:textColor="@android:color/holo_blue_dark"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:text="anaghashaha@gmail.com"
                        android:textSize="16sp" />


                </LinearLayout>






            </RelativeLayout>




            <LinearLayout
                android:id="@+id/contentLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_instaUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:hint="Instagram ID:"
                        android:inputType="textCapWords"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/insta"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:hint="phone no"
                        android:inputType="textCapWords"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="www.instagram/url/anaghashaha27"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"

                        android:gravity="center_vertical"
                        android:hint="Phone No :"
                        android:inputType="textCapWords"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:hint="phone no"

                        android:inputType="textCapWords"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="8080808080"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_paymentMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"

                        android:hint="Payment Method :"
                        android:inputType="textCapWords"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/paymentMethod"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"

                        android:inputType="textCapWords"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="cash on dilivery"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_paymentId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"

                        android:hint="Payment ID :"
                        android:inputType="textCapWords"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/paymentId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"

                        android:inputType="textCapWords"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="IC8765R32"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:hint="Coins :"
                        android:inputType="textCapWords"

                        android:padding="8dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_coin" />


                    <EditText
                        android:id="@+id/coins"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"

                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="10000"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_accountType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"

                        android:hint="Account Type :"
                        android:inputType="textCapWords"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textSize="16sp" />


                    <EditText
                        android:id="@+id/accountType"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"

                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="SBI"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_planPurchaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:hint="Plan Purchase Date :"
                        android:inputType="textCapWords"
                        android:padding="8dp"

                        android:singleLine="true"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/planPurchaseDate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:padding="8dp"

                        android:singleLine="true"
                        android:text="27/12/2020"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:hint="Plan :"
                        android:inputType="textCapWords"

                        android:padding="8dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/plan"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"

                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="27/12/2020"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_planExpDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:hint="Plan Expiry Date :"
                        android:inputType="textCapWords"

                        android:padding="8dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/planExpDate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:background="@android:color/transparent"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/circularstd"
                        android:gravity="center_vertical"
                        android:inputType="textCapWords"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="20/05/2022"
                        android:textSize="16sp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_primary"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="UPDATE"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar_userdetails"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:theme="@style/progressColor"
        android:visibility="invisible" />


</RelativeLayout>