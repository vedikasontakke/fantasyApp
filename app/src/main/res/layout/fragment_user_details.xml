<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.userDetails.UserDetailsFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/edit_profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash"
        app:civ_border_color="#FF000000"
        android:layout_margin="5dp"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/edit_profile_image">

        <EditText
            android:id="@+id/edit_fullName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/circularstd"
            android:hint="Full Name"
            android:text="Anagha Shaha"
            android:inputType="textCapWords"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Email"
            android:inputType="textCapWords"
            android:fontFamily="@font/circularstd"

            android:padding="8dp"
            android:singleLine="true"
            android:text="anaghashaha@gmail.com"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_instaUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:fontFamily="@font/circularstd"

                android:gravity="center_vertical"
                android:hint="Instagram URL:"
                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_instaUrl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="phone no"
                android:padding="8dp"
                android:fontFamily="@font/circularstd"
                android:text="www.instagram/url/anaghashaha27"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:fontFamily="@font/circularstd"

                android:gravity="center_vertical"
                android:hint="Phone No :"
                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="phone no"
                android:fontFamily="@font/circularstd"

                android:text="8080808080"
                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_paymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/circularstd"

                android:hint="Payment Method :"
                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_paymentMethod"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/circularstd"

                android:text="cash on dilivery"
                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_paymentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/circularstd"

                android:hint="Payment ID :"
                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_paymentId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/circularstd"

                android:text="IC8765R32"
                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Coins :"
                android:inputType="textCapWords"
                android:fontFamily="@font/circularstd"

                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_coin"
                />


            <EditText
                android:id="@+id/edit_coins"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="10000"
                android:fontFamily="@font/circularstd"

                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_accountType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/circularstd"

                android:hint="Account Type :"
                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/edit_accountType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="SBI"
                android:fontFamily="@font/circularstd"

                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_planPurchaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Plan Purchase Date :"
                android:inputType="textCapWords"
                android:padding="8dp"
                android:fontFamily="@font/circularstd"

                android:singleLine="true"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_planPurchaseDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="27/12/2020"
                android:inputType="textCapWords"
                android:fontFamily="@font/circularstd"

                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Plan :"
                android:inputType="textCapWords"
                android:fontFamily="@font/circularstd"

                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_plan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="27/12/2020"
                android:fontFamily="@font/circularstd"

                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_planExpDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:hint="Plan Expiry Date :"
                android:inputType="textCapWords"
                android:fontFamily="@font/circularstd"

                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_planExpDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="20/05/2022"
                android:inputType="textCapWords"
                android:padding="8dp"
                android:singleLine="true"
                android:fontFamily="@font/circularstd"

                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/ButtonDelelte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="DELELTE"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/circularstd"

                android:textColor="@color/white"
                android:singleLine="true"
                android:layout_marginRight="160dp"
                android:background="@drawable/button_primary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/ButtonUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_primary"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:singleLine="true"
                android:text="UPDATE"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>