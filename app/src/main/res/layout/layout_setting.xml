<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Setting"
            app:titleTextColor="@color/white"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:foregroundGravity="center"
        android:layout_marginTop="90dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_below="@id/appbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/txt_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"
                    android:gravity="center_vertical"
                    android:hint="Spinner limit :"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edit_Spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Spinner limit"
                    android:fontFamily="@font/circularstd"
                    android:text="10"
                    android:textColor="@color/black"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="26sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/txt_scrach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"
                    android:gravity="center_vertical"
                    android:hint="Scratch limit :"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edit_scrach"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Scratch limit"
                    android:textColor="@color/black"
                    android:fontFamily="@font/circularstd"
                    android:text="10"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="26sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/txt_guess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"
                    android:gravity="center_vertical"
                    android:hint="Guess limit :"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edit_guess"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="guess limit"
                    android:fontFamily="@font/circularstd"
                    android:text="10"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:textColor="@color/black"

                    android:singleLine="true"
                    android:textSize="26sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/txt_refer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/circularstd"

                    android:gravity="center_vertical"
                    android:hint="Refer limit :"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edit_refer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="refer limit"
                    android:fontFamily="@font/circularstd"
                    android:text="250"
                    android:inputType="textCapWords"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="26sp" />

            </LinearLayout>

            <Button
                android:id="@+id/ButtonUpdateSetting"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_primary"
                android:fontFamily="@font/circularstd"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="39dp"
                android:singleLine="true"
                android:text="UPDATE"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

  <!--  <ProgressBar
        android:id="@+id/progress_bar_setting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:theme="@style/progressColor"
        android:visibility="invisible" /> -->



</RelativeLayout>